extends layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        form.form-horizontal(method="post")
          .form-group
            label.col-sm-3.control-label(for="email") 登陆邮箱
            .col-sm-9
              input#email.form-control(type="text" name="email")
          .form-group
            label.col-sm-3.control-label(for="password") 密码
            .col-sm-9
              input#password.form-control(type="password" name="password")
           .form-group
            label.col-sm-3.control-label(for="password-repeat") 确认密码
            .col-sm-9
              input#password-repeat.form-control(type="password" name="password-repeat")
           .form-group
            label.col-sm-3.control-label(for="name") 昵称
            .col-sm-9
              input#name.form-control(type="text" name="name")
          .form-group
              .col-sm-offset-2.col-sm-10
                button(type="submit").btn.btn-default 确认注册