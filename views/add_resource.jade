extends layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        form.form-horizontal(method="post")
          .form-group
            label.col-sm-3.control-label 添加资源的电影为
            .col-sm-9
              p.form-control-static #{movie.title}
          .form-group
              input.form-control(type="hidden" name="movieid" value="#{movie._id}") 
          .form-group
            label.col-sm-3.control-label(for="resources") 下载资源
            .col-sm-9.resources
              .input-group
                input#resources.form-control(type="text" name="resources" placeholder="请输入百度云,360云,电驴或者磁力链接!")
                span.input-group-btn
                  button.btn.btn-default.addrow(type="button") 增加一行
          .form-group
              .col-sm-offset-2.col-sm-10
                button(type="submit").btn.btn-default 确认