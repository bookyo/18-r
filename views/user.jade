extends layout

append title
  title #{visituser.name}个人页面,#{visituser.name}发布的电影

append head
  meta(name="keywords" content="#{visituser.name}发布的电影,#{visituser.name}个人页面")
  meta(name="description" content="#{visituser.name}发布的电影大全，#{visituser.name}个人页面包含了#{visituser.name}发布的所有电影。")

block content
  .container
    .row
      .col-md-3
        .user-info
            img(src="/upload/avatar/avatar-#{visituser.avatar}.jpg")
            h1.name #{visituser.name}
            p 
              strong  贡献积分：
              | #{visituser.postcounts}
            p 
              strong 用户组： 
              if(visituser.isadmin)
                | I need AV
              else
                | #{visituser.role.role}
            p 
              strong 个人签名： 
              | #{visituser.signature}
            - if(user&&visituser._id == user._id)
                .btn-group.text-center(role="group")
                  a.btn.btn-default.btn-do(type="button" href="/logout") 注销
                  a.btn.btn-default.btn-do(type="button" href="/user/do/edit") 编辑资料
                  a.btn.btn-default.btn-do(type="button" href="/user/goup") 升级
       include movie