extends layout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        form.form-horizontal(method="post" enctype="multipart/form-data")
          .form-group
            label.col-sm-3.control-label(for="title") 电影名称
            .col-sm-9
              input#title.form-control(type="text" name="title")
          .form-group
            label.col-sm-3.control-label(for="doctor") 导演
            .col-sm-9
              input#doctor.form-control(type="text" name="doctor")
          .form-group
            label.col-sm-3.control-label(for="players") 主演
            .col-sm-9
              input#players.form-control(type="text" name="players")
          .form-group
            label.col-sm-3.control-label(for="country") 国家
            .col-sm-9
              input#country.form-control(type="text" name="country")
          .form-group
            label.col-sm-3.control-label(for="year") 上映年份
            .col-sm-9
              input#year.form-control(type="text" name="year" placeholder="输入年份数字，必须为纯数字，比如2000")
          .form-group
            label.col-sm-3.control-label 分类
            .col-sm-9
              each tag in tags
                label.checkbox-inline
                  input.types(type="checkbox" value="#{tag._id}" name="types")
                  | #{tag.tag}
          .form-group
            label.col-sm-3.control-label(for="summary") 剧情简介
            .col-sm-9
              textarea#summary.form-control(rows="6" name="summary")
          .form-group
            label.col-sm-3.control-label(for="img") 海报
            .col-sm-9
              input#img.form-control(type="file" name="img")
          .form-group
            label.col-sm-3.control-label(for="resources") 下载资源
            .col-sm-9.resources
              .input-group
                input#resources.form-control(type="text" name="resources" placeholder="请输入百度网盘,电驴或者磁力链接!")
                span.input-group-btn
                  button.btn.btn-default.addrow(type="button") 增加一行
          .form-group
              .col-sm-offset-2.col-sm-10
                button(type="submit").btn.btn-default 发布
